---
import { Icon } from "astro-icon/components";
import * as about from "../pages/about/about.md";
---

<header class="mx-auto pt-6 pb-2 relative">
  <article
    class="flex flex-col md:flex-col items-center gap-4 w-full max-w-2xl"
  >
    <div
      class="flex-shrink-0 w-20 md:w-24 rounded-full shadow-sm overflow-hidden cursor-pointer profile-image-container"
      id="profileImageContainer"
    >
      <img
        alt="avatar"
        src="/profile.webp"
        class="grayscale-[50] hover:grayscale-0 transition-all duration-300 hover:scale-105"
        id="profileImage"
      />
    </div>

    <!-- Profile Image Modal -->
    <div id="profileModal" class="profile-modal hidden">
      <div class="profile-modal-backdrop" id="modalBackdrop"></div>
      <div class="profile-modal-content">
        <button class="profile-modal-close" id="closeModal">
          <Icon name="carbon:close" class="w-6 h-6" />
        </button>
        <img
          src="/profile.webp"
          alt="Profile Picture"
          class="profile-modal-image"
        />
      </div>
    </div>

    <div class="text-center">
      <div
        class="flex justify-center md:justify-between items-center mb-2 relative"
      >
        <h1 class="text-3xl font-extrabold tracking-tight md:text-3xl relative">
          {about.frontmatter.name}
          <div class="absolute top-0 left-full ml-2 -mt-4">
            <div class="badge w-max text-sm font-light badge-outline shadow-lg">
              {about.frontmatter.pronouns}
            </div>
          </div>
        </h1>
      </div>
      <h2 class="text-lg mb-2 text-secondary">
        {about.frontmatter.designation}
      </h2>
      <div class="flex items-center justify-center mt-1">
        <Icon name="carbon:location" class="w-4 h-4 mr-1" />
        <p class="text-sm text-secondary">{about.frontmatter.location}</p>
      </div>
    </div>
  </article>
</header>

<style>
  @media (max-width: 768px) {
    .flex-col.justify-end {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }

  /* Profile Image Hover Effect */
  .profile-image-container {
    position: relative;
  }

  .profile-image-container::after {
    content: 'üîç';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    font-size: 14px;
  }

  .profile-image-container:hover::after {
    opacity: 1;
  }

  /* Modal Styles */
  .profile-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .profile-modal.hidden {
    display: none;
  }

  .profile-modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
  }

  .profile-modal-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    background: transparent;
    border-radius: 12px;
    overflow: hidden;
    animation: modalZoomIn 0.3s ease-out;
  }

  .profile-modal-image {
    width: 500px;
    height: 500px;
    max-width: 85vw;
    max-height: 85vh;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 
      0 0 40px rgba(0, 255, 255, 0.4),
      0 0 80px rgba(255, 0, 255, 0.3),
      0 0 120px rgba(0, 255, 255, 0.2);
    border: 4px solid rgba(0, 255, 255, 0.5);
  }

  /* Responsive sizing for smaller screens */
  @media (max-width: 768px) {
    .profile-modal-image {
      width: 400px;
      height: 400px;
    }
  }

  @media (max-width: 480px) {
    .profile-modal-image {
      width: 320px;
      height: 320px;
    }
  }

  .profile-modal-close {
    position: absolute;
    top: -50px;
    right: 0;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(0, 255, 255, 0.5);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #00ffff;
    cursor: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .profile-modal-close:hover {
    background: rgba(0, 255, 255, 0.2);
    border-color: #00ffff;
    transform: scale(1.1);
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
  }

  @keyframes modalZoomIn {
    0% {
      transform: scale(0.5);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes modalZoomOut {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(0.5);
      opacity: 0;
    }
  }

  .profile-modal.closing .profile-modal-content {
    animation: modalZoomOut 0.3s ease-in;
  }
</style>
